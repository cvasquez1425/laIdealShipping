@model laIdealShipping.Entities.Shipping

@{
    ViewBag.Title = "Shipping Departure Info Edit";
}

<h2>ShippingEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Shipping</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.nextShippingDate, htmlAttributes: new { @class = "control-label col-md-2" })
