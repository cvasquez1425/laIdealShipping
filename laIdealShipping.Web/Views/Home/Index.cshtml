<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            @*<img src="http://placehold.it/1200x315" alt="...">*@
            <img src="~/Images/CarrouselPic1.jpg" /><br />
            <div class="carousel-caption">
                <h3 class="text-info">Let us Handle Your Cargo</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/CarrouselPic2.jpg" />
            <div class="carousel-caption">
                <h3 class="text-info">We Strive to Exceed Your Expectations</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/IMG_CarrouselPic.png" />
            @*<div class="carousel-caption">
                    <h3 style="color:whitesmoke">Door to Door Service by Sea or Air</h3>
                </div>*@
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div> <!-- Carousel -->&nbsp;&nbsp;

<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="~/Images/Ocean%20Freight.JPG" width="300" height="300" />
            <div class="caption">
                <h3>Shipping</h3>
                <p>
                    Our 100 % Service Guarantee, worth more than any price of our competitors. @*Nuestro Servicio Grantizado, vale más que cualquier precio de la competencia.*@
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="~/Images/Domestic%20Freight.JPG" width="300" height="300" />
            <div class="caption">
                <h3>Who We Are?</h3>
                <p>
                    Shipping of Vehicles &bull; boxes (Clothing - Goods) &bull; All kind of Applicances &bull; Tools and Hardware items
                    &bull; Commercial and Industrial Shipping Solutions
                    &bull; Door to Door transportation to Dominican Republic &bull; Rental Containers &bull; Complimentary Estimates
                    &bull; We Package and Board your shipping items at the front door.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="~/Images/Air%20Freight.JPG" width="300" height="300" />
            <div class="caption">
                <h3>Next Departure</h3>
                <div class="well">
                    <p>
                        @*Our Next Departure Date @Html.DisplayFor(m => m.nextShippingDate)*@
                        Our Next Departure Date @ViewData["nextDepartureDate"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>